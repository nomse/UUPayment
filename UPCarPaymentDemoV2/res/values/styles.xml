<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="NoTitleTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TitleBg">
        <item name="android:background">@color/title</item>
        <!-- no padding needed here -->
        <!-- <item name="android:paddingLeft">14dp</item> -->
    </style>

    <style name="DefaultTheme" parent="AppTheme">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleSize">54dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/TitleBg</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/fontsize_big</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/fontsize_big</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/simple_button_bg</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- home tab theme. -->
    <style name="TabItemTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainWhiteText" parent="BaseText">
        <item name="android:textSize">@dimen/fontsize_biger</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="SmallWhiteText" parent="MainWhiteText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SummaryText" parent="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_summary</item>
    </style>

    <style name="SecondaryText" parent="BaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_sencondary</item>
    </style>

    <style name="SmallText" parent="BaseText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_small</item>
    </style>

    <style name="MainWhiteLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/main_bg</item>
    </style>

    <style name="ShoppingRedButton">
        <item name="android:background">@drawable/bg_shopping_btn_red</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="CardInputTheme">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/fontsize_biger</item>
    </style>

    <style name="TabTheme">
        <item name="android:textSize">@dimen/fontsize_normal</item>
    </style>

    <style name="ModuleItemTheme">
        <item name="android:textSize">@dimen/fontsize_normal</item>
        <item name="android:textColor">@color/text_sencondary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SelectionTitleTheme">
        <item name="android:textSize">@dimen/fontsize_normal</item>
        <item name="android:textColor">@color/text_summary</item>
    </style>

    <style name="ListCardInfoTheme">
        <item name="android:textSize">@dimen/fontsize_biger</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CardDtlTheme">
        <item name="android:textSize">@dimen/fontsize_normal</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

</resources>