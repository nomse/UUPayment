<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="15dp" >

    <TextView
        style="@style/SelectionTitleTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_selection_item_title"
        android:drawablePadding="5dp"
        android:text="@string/selection_item_label_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/layout_insurance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_selection"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                style="@style/SecondaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="阳光车险"
                android:textSize="@dimen/fontsize_small" />

            <TextView
                style="@style/SmallText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="要买车险的看过来 | 购阳光车险满额送私人农场"
                android:textSize="@dimen/fontsize_min" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_temp_insurance" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_temp_car" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_kfc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selection"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_temp_kfc" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5.5"
                    android:orientation="vertical"
                    android:paddingLeft="5dp" >

                    <TextView
                        style="@style/SecondaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="KFC汽车餐厅"
                        android:textSize="@dimen/fontsize_small" />

                    <TextView
                        style="@style/SmallText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="肯德基开通银联IC卡支付 62折跨年优惠活动来袭"
                        android:textSize="@dimen/fontsize_min" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_cloud_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_selection"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_temp_pay" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5.5"
                    android:orientation="vertical"
                    android:paddingLeft="5dp" >

                    <TextView
                        style="@style/SecondaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="银联云闪付"
                        android:textSize="@dimen/fontsize_small" />

                    <TextView
                        style="@style/SmallText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ApplePay突出新功能!还有你意想不到的事情要发生..."
                        android:textSize="@dimen/fontsize_min" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>