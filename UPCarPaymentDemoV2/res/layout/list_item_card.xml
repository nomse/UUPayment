<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_bank_icon"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:background="@drawable/ic_bg_bank_card" />

        <TextView
            android:id="@+id/text_bank_name"
            style="@style/ListCardInfoTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:textSize="@dimen/fontsize_smax" />

        <ImageView
            android:id="@+id/img_bank_defult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@null"
            android:paddingRight="25dp"
            android:paddingTop="25dp"
            android:src="@drawable/ic_flag_default"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_bank_defult"
            style="@style/ListCardInfoTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="25dp"
            android:paddingTop="20dp"
            android:text="@string/label_default_card"
            android:textColor="@color/text_white"
            android:textSize="@dimen/fontsize_max" />

        <TextView
            android:id="@+id/text_bank_pan"
            style="@style/ListCardInfoTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:textColor="@color/text_white"
            android:textSize="@dimen/fontsize_sumax"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_wallet_fit"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:text="网购付款"
            android:textSize="@dimen/fontsize_small" />

        <ImageView
            android:id="@+id/img_bank_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@null"
            android:src="@drawable/logo_cmbc" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="#19000000" />

</LinearLayout>