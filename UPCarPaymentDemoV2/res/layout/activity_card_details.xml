<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp" >

        <ImageView
            android:layout_width="116dp"
            android:layout_height="72dp"
            android:background="@drawable/ic_bg_bank_card"
            android:contentDescription="@null"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/text_bank_name"
                style="@style/CardDtlTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XXX 信用卡"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/text_bank_pan_1"
                    style="@style/CardDtlTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="尾号 8888"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_card_trans"
                    style="@style/CardDtlTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="交易明细"
                    android:textSize="@dimen/fontsize_small" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#19000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <!-- 付款方式 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:orientation="vertical" >

                <TextView
                    style="@style/CardDtlTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="付款方式"
                    android:textSize="@dimen/fontsize_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#19000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CardDtlTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="银联汽车钱包"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="#19000000" />
            </LinearLayout>

            <!-- 实体卡号 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:orientation="vertical" >

                <TextView
                    style="@style/CardDtlTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="实体卡号"
                    android:textSize="@dimen/fontsize_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#19000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text_card_no"
                        style="@style/CardDtlTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="**** 0112"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="#19000000" />
            </LinearLayout>

            <!-- 设备卡号 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:orientation="vertical" >

                <TextView
                    style="@style/CardDtlTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="设备卡号"
                    android:textSize="@dimen/fontsize_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#19000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text_bank_pan_2"
                        style="@style/CardDtlTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6225 **** **** 8888"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="#19000000" />
            </LinearLayout>
            <!-- 银行服务 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:orientation="vertical" >

                <TextView
                    style="@style/CardDtlTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="银行服务"
                    android:textSize="@dimen/fontsize_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#19000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/text_contact_bank"
                        style="@style/CardDtlTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="联系招商银行" />

                    <TextView
                        android:id="@+id/text_bank_service_tel"
                        style="@style/CardDtlTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:text="95555"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="#19000000" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_set_card_default"
        style="@style/AppButtonStyle"
        android:layout_gravity="bottom"
        android:layout_margin="30dp"
        android:gravity="center"
        android:text="设置为默认卡" />

</LinearLayout>